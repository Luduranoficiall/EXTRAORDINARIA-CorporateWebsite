# Example env for python-app
PYAPP_DB=python-app/data.db
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Payments/Stripe (set in CI or local dev)
# STRIPE_SECRET_KEY=sk_test_...
# PRICE_ID=price_...
# ENABLE_CORS=1
# PAYMENTS_PORT=5003

# AI Orchestrator
# AI_PROVIDER=stub   # or openai
# OPENAI_API_KEY=sk-...
# AI_PORT=5050

# Storage providers
# STORAGE_PROVIDER=local   # or s3
# STORAGE_DIR=./.data/storage
# S3_BUCKET=extraordinaria-uploads
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# S3_ENDPOINT_URL=http://localhost:9000   # optional, e.g., MinIO

# Dropbox (active)
# STORAGE_PROVIDER=dropbox
# DROPBOX_ACCESS_TOKEN=...

# Google Drive (active)
# STORAGE_PROVIDER=gdrive
# Option A (Service Account):
# GOOGLE_DRIVE_SERVICE_ACCOUNT_JSON={"type":"service_account", ...}   # or a file path
# GOOGLE_DRIVE_PARENT_FOLDER_ID=...   # optional
# Option B (OAuth with refresh token):
# GOOGLE_DRIVE_CLIENT_ID=...
# GOOGLE_DRIVE_CLIENT_SECRET=...
# GOOGLE_DRIVE_REFRESH_TOKEN=...
